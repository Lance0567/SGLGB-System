  pHeader2.Visible := True;
  pButtonToolbar2.Visible := True;
end;

// Tabs Reset for PageControl2
procedure TfrmDCF.TabsReset2;
begin
  gpForm1.Visible := False;
  stSection1.Visible := False;
  gpForm2.Visible := False;
  stSection2.Visible := False;
  gpForm3.Visible := False;
  stSection3.Visible := False;
  gpForm4.Visible := False;
  stSection4.Visible := False;
  gpForm5.Visible := False;
  stSection5.Visible := False;
  gpForm6.Visible := False;
  stSection6.Visible := False;
  gpForm7.Visible := False;
  stSection7.Visible := False;
  pFooterEnd.Visible := False;
end;

