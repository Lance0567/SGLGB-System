{-----------------------------------CheckBox-----------------------------------}
procedure TfrmDCF.CheckBoxYesClick(Sender: TObject);
var
  CheckBoxYes, CheckBoxNo: TCheckBox;
  CheckBoxNoName: string;
begin
  CheckBoxYes := Sender as TCheckBox;
  CheckBoxNoName := StringReplace(CheckBoxYes.Name, 'Yes', 'No', []);
  CheckBoxNo := FindComponent(CheckBoxNoName) as TCheckBox;

  if CheckBoxYes.Checked then
  begin
    CheckBoxNo.Checked := False;
    FCheckboxValue := 'Yes';
  end;
end;

procedure TfrmDCF.CheckBoxNoClick(Sender: TObject);
var
  CheckBoxNo, CheckBoxYes: TCheckBox;
  CheckBoxYesName: string;
begin
  CheckBoxNo := Sender as TCheckBox;
  CheckBoxYesName := StringReplace(CheckBoxNo.Name, 'No', 'Yes', []);
  CheckBoxYes := FindComponent(CheckBoxYesName) as TCheckBox;

  if CheckBoxNo.Checked then
  begin
    CheckBoxYes.Checked := False;
    FCheckboxValue := 'No';
  end;
end;

{------------------------------------FORM--------------------------------------}
procedure TfrmDCF.FormResize(Sender: TObject);
begin
  Self.Caption := 'Height: ' + IntToStr(ClientHeight) + ' ' + 'Width: ' + IntToStr(ClientWidth);

  //-------Form Responsive Settings-------//

  // Details Tab

  // FAS Tab
end;

procedure TfrmDCF.FormShow(Sender: TObject);
begin
  ClientHeight := 569;
end;

procedure TfrmDCF.PageControl1Change(Sender: TObject);
begin
  case PageControl1.ActivePageIndex of
    0: DetailsTab;
    1: FASTab;
    2:
  end;
end;

procedure TfrmDCF.PageControl2Change(Sender: TObject);
begin
  case PageControl2.ActivePageIndex of
    0: ComplianceTab;
    1: InnovationsTab;
    2: ApprovalTab;
    3: AllocationTab;
    4: PostingTab;
    5: ReleaseTab;
    6: ComplianceTab;
  end;
end;

{----------------------------------SCROLLBOX-----------------------------------}
//-------Mouse Wheel Sender-------//
procedure TfrmDCF.ScrollBoxMouseWheelHandler(Sender: TObject; Shift: TShiftState;
  WheelDelta: Integer; MousePos: TPoint; var Handled: Boolean);
begin
  HandleScrollBoxMouseWheel(TScrollBox(Sender), Shift, WheelDelta,MousePos, Handled);
end;

